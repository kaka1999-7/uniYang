/* 评论区 */
.comment.data-v-57280228 {
	min-height: 30vh;
	margin-top: 30rpx;
	/* border: 1px solid black; */
}
.comment .tab.data-v-57280228 {
	position: -webkit-sticky;
	position: sticky;
	top: 80rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
	padding: 20rpx 0;
	font-size: 25rpx;
	font-weight: 600;
	/* border: 1px solid black; */
	z-index: 1000000;
	background-color: #f3f3f3;
}
.comment .tab ._span.data-v-57280228 {
	position: relative;
	z-index: 1;
}
.comment .tab .active.data-v-57280228::before {
	content: "";
	display: inline-block;
	width: 60%;
	height: 20rpx;
	background-color: #aefffd;
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	/* x,y偏移，模糊大小，模糊延申距离， */
	box-shadow: 0rpx 0rpx 10rpx 5rpx #aefffd;
	z-index: -1;
}
.comment .tab .active.data-v-57280228::after {
	content: "";
	position: absolute;
	left: 50%;
	top: 90%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 60%;
	height: 60%;
	border: 5px solid transparent;
	border-bottom: 5px solid #0593ff;
	border-radius: 50%;
}

